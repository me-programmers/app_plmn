<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-striped table-bordered table-condensed sortable">
    <thead>
        <tr>
            <th><%= sortable "nama_pasien", "Nama Pasien"%></th>
            <th style="width: 40px;"></th>
        </tr>
    </thead>
    <tbody>
        <% @pasien3s.each do |pasien3| %>
        <tr>
            <td valign="top"> 
                <%= link_to pasien3.nama_pasien, edit_pasien3_path(pasien3), :remote => true %> 
            </td>
            <td valign="top"> 
                <%= link_to edit_pasien3_path(pasien3), :remote => true, :style=>'height: 14px;', :title=>'Edit' do%> 
                    <i class="icon-edit"></i> 
                <% end %> 
                
                <a style="height: 14px; padding-left: 5px;" title="Delete"
                    data-backdrop="static" data-keyboard="true"
                    href="javascript:;"
                    onclick="show_confirm_modal('<%= pasien3_path(pasien3) %>',
                    'Are you sure you want to delete the pasien3 : <%= pasien3.nama_pasien%>');"> 
                    <i class="icon-remove"></i> 
                </a>
            </td>
        </tr>
        <% end %>

    </tbody>
    <tfoot>
        <tr>
            <td colspan="2"> <%= will_paginate @pasien3s %> </td>
        </tr>
    </tfoot>
</table>
