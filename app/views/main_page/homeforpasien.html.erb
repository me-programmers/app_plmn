<%= define_grid(@pasien_grid, hide_submit_button: true, hide_reset_button: true, upper_pagination_panel: true) do |g|

		g.column name: "Nama Pasien", attribute: "nama_pasien", detach_with_id: :nama_pasien

		g.column name: "Tanggal Periksa", attribute: "tanggal", detach_with_id: :tanggal

		g.column do |task|
	    	link_to 'Print', "#{task}", :data => {:toggle=>"modal"}, :class=>"btn"
	    	#will produce -> <a class="btn" data-toggle="modal" href="#myModal" >Print</a>
	  	end

	end %>

<div class="row-fluid">
	<div class="span2">Filter Nama</div>
	<div class="span10"><%= grid_filter @pasien_grid, :nama_pasien  %></div>
</div>
<div class="row-fluid">
	<div class="span2">Filter Tanggal</div>
	<div class="span10"><%= grid_filter @pasien_grid, :tanggal  %></div>
</div>
<div class="row-fluid">
	<div class="span12"></div>
</div>
<div class="row-fluid">
	<div class="span12">
		<div class="external-buttons">
			<button class="btn btn-primary wg-external-submit-button" data-grid-name="grid">Proses</button>
			<button class="btn wg-external-reset-button" data-grid-name="grid">Reset</button>			
		</div>
	</div>
</div> 
<div class="row-fluid">
	<div class="span12"></div>
</div>

<%= render_grid(@pasien_grid) %>

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Detail Pasien</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>